---
import Logotype from './Logotype.astro';
import CategoriesMenu from './CategoriesMenu.astro';
import Updates from './Updates.astro';
---

<header>
  <div class="container">
    <div class="wrapper">
      <Logotype />
      <nav>
        <CategoriesMenu title="Software categories" />
        <Updates href="#" notification />
      </nav>
    </div>
  </div>
</header>

<style lang="scss">
  @import '../styles/mixins';

  header {
    padding: 1.4375rem 0;

    .wrapper {
      @include flexRow;
      justify-content: space-between;
    }

    nav {
      @include flexRow;
      gap: 2rem;
    }
  }
</style>
