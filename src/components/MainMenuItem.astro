---
const { href, title, indicator = false } = Astro.props;
---

<a class="menu-item" href={href}>{title}</a>

<style lang="scss">
  @import '../styles/colors';
  @import '../styles/mixins';

  .menu-item {
    @include flexRow;
    gap: 0.375rem;

    &::after {
      content: '';
      position: relative;
      top: -2px;
      width: 6px;
      height: 6px;
      background-color: $black;
      border-radius: 50%;
      //   box-shadow: 0px 0px 0px 2px rgba(colors.$black, 0.12);
      animation: pulse 1.5s ease-in-out infinite;
    }
  }

  @keyframes pulse {
    0% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.06);
    }
    50% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.18);
      transform: scale(1.05);
    }
    100% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.06);
    }
  }
</style>
