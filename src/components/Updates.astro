---
const { href, notification = false } = Astro.props;
---

<a class:list={['menu-item', { notification: notification }]} href={href}>Updates</a>

<style lang="scss">
  @import '../styles/colors';
  @import '../styles/mixins';

  .menu-item {
    @include flexRow;
    gap: 0.375rem;

    &.notification {
      &::after {
        content: '';
        position: relative;
        top: -0.125rem;
        width: 0.375rem;
        height: 0.375rem;
        background-color: $black;
        border-radius: 50%;
        animation: pulse 1.5s ease-in-out infinite;
      }
    }
  }

  @keyframes pulse {
    0% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.06);
    }
    50% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.18);
      transform: scale(1.05);
    }
    100% {
      box-shadow: 0px 0px 0px 2px rgba($black, 0.06);
    }
  }
</style>
